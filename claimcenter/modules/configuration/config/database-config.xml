<?xml version="1.0"?>
<database-config xmlns="http://guidewire.com/database-config">
  <!-- H2 (meant for demo/quickstart use only!) -->
  <database autoupgrade="full" dbtype="h2" name="ClaimCenterDatabase">
    <dbcp-connection-pool jdbc-url="jdbc:h2:file:./tmp/cc;AUTO_SERVER=true;"/>
    <upgrade defer-create-nonessential-indexes="false"/>
  </database>
  
  <database autoupgrade="full" dbtype="h2" env="h2mem" name="ClaimCenterDatabase">
    <dbcp-connection-pool jdbc-url="jdbc:h2:mem:/tmp/guidewire/cc"/>
    <upgrade defer-create-nonessential-indexes="false"/>
  </database>
  
